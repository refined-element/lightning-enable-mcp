<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <!-- Package as a dotnet global tool -->
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>lightning-enable-mcp</ToolCommandName>

    <!-- NuGet Package Metadata -->
    <PackageId>LightningEnable.Mcp</PackageId>
    <Version>1.6.0</Version>
    <AssemblyVersion>1.6.0.0</AssemblyVersion>
    <FileVersion>1.6.0.0</FileVersion>
    <Authors>Lightning Enable</Authors>
    <Company>Lightning Enable</Company>
    <Product>Lightning Enable MCP Server</Product>
    <Description>MCP server enabling AI agents to make Lightning payments. Pay invoices, check balance, track history, and auto-pay L402 challenges for API access.</Description>
    <PackageProjectUrl>https://lightningenable.com</PackageProjectUrl>
    <PackageTags>mcp;l402;lightning;bitcoin;ai;payments;nostr;nwc;wallet-connect;opennode</PackageTags>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <!-- <PackageIcon>icon.png</PackageIcon> -->

    <PackageReleaseNotes>v1.6.0: Remove L402 license requirement - all L402 tools now work without a license purchase. Removed unlock_l402_features and check_l402_license tools.</PackageReleaseNotes>

    <!-- MIT License -->
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Copyright>Copyright (c) 2025 Lightning Enable</Copyright>

    <!-- Assembly info -->
    <AssemblyName>LightningEnable.Mcp</AssemblyName>
    <RootNamespace>LightningEnable.Mcp</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="ModelContextProtocol" Version="0.6.0-preview.1" />
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="9.0.0" />
    <PackageReference Include="Microsoft.Extensions.Http" Version="9.0.0" />
    <PackageReference Include="Microsoft.Extensions.Caching.Memory" Version="9.0.0" />
    <PackageReference Include="NBitcoin.Secp256k1" Version="3.1.5" />
  </ItemGroup>

  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="\" />
    <None Include="LICENSE.txt" Pack="true" PackagePath="\" />
  </ItemGroup>

</Project>
